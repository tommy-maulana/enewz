<?xml version="1.0" encoding="utf-8"?>

                                                            

    <LinearLayout
        android:id="@+id/shimmer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:visibility="visible" android:tag="layout/shimmer_feed_post_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            shimmer:shimmer_duration="1500">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_7dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:background="@color/shimmerLight" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
