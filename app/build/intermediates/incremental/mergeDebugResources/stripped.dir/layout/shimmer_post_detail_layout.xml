<?xml version="1.0" encoding="utf-8"?>

                                                            

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/product_detail_shimmerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingStart="@dimen/size_10dp"
        android:paddingEnd="@dimen/size_10dp"
        android:paddingTop="@dimen/size_5dp"
        android:paddingBottom="@dimen/size_5dp"
        shimmer:shimmer_duration="1500" android:tag="layout/shimmer_post_detail_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shimmer="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_25dp"
                android:background="@color/shimmer" />

            <View
                android:layout_width="@dimen/size_250dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:background="@color/shimmerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="@dimen/size_120dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:background="@color/shimmerLight" />

                <View
                    android:id="@+id/favourite_shimmer"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginEnd="@dimen/size_60dp"
                    android:background="@color/shimmer" />

                <View
                    android:id="@+id/share_shimmer"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:background="@color/shimmer" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/shimmerLight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_30dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginStart="@dimen/size_40dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:background="@color/shimmer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:layout_marginEnd="@dimen/size_40dp"
                    android:background="@color/shimmer" />

            </LinearLayout>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

         