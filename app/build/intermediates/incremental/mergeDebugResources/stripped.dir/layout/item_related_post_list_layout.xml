<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical" android:tag="layout/item_related_post_list_layout_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100dp"
            android:layout_marginTop="@dimen/size_3dp"
            android:layout_marginBottom="@dimen/size_3dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/size_140dp"
                android:layout_height="match_parent"
                android:padding="@dimen/size_5dp">

                <ImageView
                    android:id="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@color/placeholder" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/size_7dp"
                android:layout_marginEnd="@dimen/size_7dp"
                android:orientation="vertical">

                <com.bestweby.enewz.customview.RobotoTextView
                    android:id="@+id/post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginBottom="@dimen/size_18dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="@string/text_placeholder"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/colorBlack"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_12dp"
                        android:layout_height="@dimen/size_12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_comment_128"
                        android:tint="@color/gray" />

                    <com.bestweby.enewz.customview.RobotoTextView
                        android:id="@+id/post_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_5dp"
                        android:text="@string/default_comments"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="?android:attr/dividerHorizontal" />

    </LinearLayout>

         